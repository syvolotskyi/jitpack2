<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_p_30"
        android:text="Tab With Two Elements"
        android:textColor="?attr/brand_primary" />

    <ge.space.ui.components.tab_navigation.SPTabNavigationView
        android:id="@+id/twoTabNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_p_30"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_p_30"
        android:text="Tab With Three Elements"
        android:textColor="?attr/brand_primary" />

    <ge.space.ui.components.tab_navigation.SPTabNavigationView
        android:id="@+id/threeTabNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_p_30"/>

</LinearLayout>