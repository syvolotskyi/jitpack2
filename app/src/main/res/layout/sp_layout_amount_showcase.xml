<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ge.space.ui.components.amount.SPAmountView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:amount="12.15"
            app:currency="@string/default_currency"
            app:descriptionText="@string/description"
            app:title="@string/app_name" />

        <ge.space.ui.components.amount.SPAmountView
            style="@style/SPAmountView.Success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_p_16"
            app:addOn="tooltip"
            app:addOnText="@string/description"
            app:amount="12.15"
            app:currency="@string/default_currency"
            app:descriptionText="@string/description"
            app:title="@string/app_name" />

        <ge.space.ui.components.amount.SPAmountView
            style="@style/SPAmountView.Error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_p_16"
            app:addOn="info"
            app:addOnText="@string/app_name"
            app:amount="12.15"
            app:currency="@string/default_currency"
            app:descriptionText="@string/description"
            app:title="@string/app_name" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/programLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_p_32"
            android:orientation="vertical" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>