<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/buttonName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="10dp"
      android:textColor="?attr/static_black"
      tools:text="Button" />

  <ge.space.ui.components.buttons.SPButtonInline
      android:id="@+id/button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_calendar_24_regular"
      android:layout_gravity="center_horizontal"
      android:text="@string/all_component"
      app:description="@string/inline_button_description"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:gravity="center_horizontal"
      android:orientation="horizontal">

    <CheckBox
        android:id="@+id/disableCheck"
        android:layout_width="wrap_content"
        style="@style/SPCheckbox.DefaultStyle"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="disable" />
    <CheckBox
        android:id="@+id/captionCheck"
        android:layout_width="wrap_content"
        style="@style/SPCheckbox.DefaultStyle"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="caption" />


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/wrapContentCheck"
        style="@style/SPCheckbox.DefaultStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:text="central" />

  </LinearLayout>

  <include layout="@layout/sp_layout_divider"/>

</LinearLayout>