<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ge.space.ui.components.text_fields.input.base.SPTextFieldInput
        android:id="@+id/phoneInput"
        style="@style/SPTextInput.Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_p_16"
        android:imeOptions="actionNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="Input phone number" />

    <ge.space.ui.components.text_fields.input.base.SPTextFieldInput
        android:id="@+id/dateInputSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SPTextInput.DateMasked"
        android:layout_margin="@dimen/dimen_p_16"
        android:imeOptions="actionDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneInput"
        app:titleText="Input date number" />

    <ge.space.ui.components.text_fields.input.base.SPTextFieldInput
        android:id="@+id/cardInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_p_16"
        android:imeOptions="actionNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateInputSecond"
        style="@style/SPTextInput.CardMasked"
        app:titleText="Input card number" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/labelTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fitsSystemWindows="false"
        android:hint="Input label title"
        android:imeOptions="actionDone"
        android:inputType="textVisiblePassword"
        android:padding="@dimen/dimen_p_10"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>