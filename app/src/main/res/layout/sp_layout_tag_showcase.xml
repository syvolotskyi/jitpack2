<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="?attr/background_secondary"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/SPTextView.Tag"
            android:layout_margin="@dimen/dimen_p_16"
            android:text="@string/tag_example_text" />

        <TextView
            style="@style/SPTextView.Tag.Brand"
            android:layout_margin="@dimen/dimen_p_16"
            android:text="@string/tag_example_text"

            />

        <TextView
            style="@style/SPTextView.Tag.WithBorder"
            android:layout_margin="@dimen/dimen_p_16"
            android:text="@string/tag_example_text" />

        <TextView
            style="@style/SPTextView.Tag.Brand.WithBorder"
            android:layout_margin="@dimen/dimen_p_16"
            android:text="@string/tag_example_text" />

    </LinearLayout>
</ScrollView>
