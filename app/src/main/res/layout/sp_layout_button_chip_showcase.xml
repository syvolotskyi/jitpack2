<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="?attr/background_secondary"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ge.space.ui.components.buttons.SPButtonChip
            style="@style/SPButtonChip"
            android:src="@drawable/ic_share_ios_16_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_p_16"
            android:text="@string/small_example_text" />

        <ge.space.ui.components.buttons.SPButtonChip
            style="@style/SPButtonChip.Brand"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_share_ios_16_regular"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_p_16"
            android:text="@string/small_example_text" />
    </LinearLayout>
</ScrollView>
