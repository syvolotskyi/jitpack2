<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="?attr/background_secondary"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ge.space.ui.components.layout.SPFrameLayout
                android:id="@+id/testView"
                style="@style/shadow_300_primary"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_p_40"
                android:background="@color/purple_50"
                app:layout_constraintEnd_toStartOf="@+id/compareView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/compareView"
                android:layout_width="@dimen/dimen_p_40"
                android:layout_height="@dimen/dimen_p_40"
                android:background="@color/cool_gray_50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_p_16"
            android:orientation="horizontal">

            <ge.space.ui.components.layout.SPFrameLayout
                android:layout_width="@dimen/dimen_p_200"
                android:layout_height="@dimen/dimen_p_40"
                android:background="@color/purple_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_p_40"
                    android:text="Without shadow" />
            </ge.space.ui.components.layout.SPFrameLayout>

            <View
                android:layout_width="@dimen/dimen_p_40"
                android:layout_height="@dimen/dimen_p_40"
                android:background="@color/cool_gray_50" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_p_16"
            android:orientation="horizontal">

            <ge.space.ui.components.layout.SPFrameLayout
                style="@style/SPSearchBoxElevated"
                android:layout_width="@dimen/dimen_p_200"
                android:layout_height="wrap_content"
                android:background="@color/purple_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_p_40"
                    android:text="wrap_content" />
            </ge.space.ui.components.layout.SPFrameLayout>

            <View
                android:layout_width="@dimen/dimen_p_40"
                android:layout_height="@dimen/dimen_p_40"
                android:background="@color/cool_gray_50" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
