<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ge.space.ui.components.tooltips.SPTooltipView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_p_8"
            android:text="@string/example_text"
            app:directionArrow="none" />

        <ge.space.ui.components.tooltips.SPTooltipView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_p_8"
            android:text="@string/example_text"
            app:directionArrow="top_left" />

        <ge.space.ui.components.tooltips.SPTooltipView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_p_8"
            app:backgroundBoxColor="?attr/status_tertiary_alert"
            android:text="@string/example_text"
            app:directionArrow="top_center" />

        <ge.space.ui.components.tooltips.SPTooltipView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_p_8"
            android:text="@string/example_text"
            app:directionArrow="top_right" />

        <ge.space.ui.components.tooltips.SPTooltipView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_p_8"
            android:text="@string/example_text"
            app:directionArrow="bottom_left" />

        <ge.space.ui.components.tooltips.SPTooltipView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_p_8"
            android:text="@string/example_text"
            app:directionArrow="bottom_center" />

        <ge.space.ui.components.tooltips.SPTooltipView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_p_8"
            android:text="@string/example_text"
            app:directionArrow="bottom_right" />

        <ge.space.ui.components.tooltips.SPTooltipView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_p_8"
            android:text="@string/example_text"
            app:directionArrow="left" />

        <ge.space.ui.components.tooltips.SPTooltipView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_p_8"
            android:text="@string/example_text"
            app:directionArrow="right" />


    <LinearLayout
        android:id="@+id/smallTooltipsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    </LinearLayout>

</ScrollView>
