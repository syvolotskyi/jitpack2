<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/vButtonTwiceDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_dialog_divider_height"
        android:background="?attr/separator_non_opaque"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/lytTwice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <ge.space.ui.components.buttons.SPButton
            android:id="@+id/btnDialogLeft"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp_dialog_button_height"
            android:layout_weight="1"
            style="@style/SPButton.Dialog.Positive"
            tools:text="Label" />

        <View
            android:id="@+id/vDivider"
            android:layout_width="@dimen/sp_dialog_divider_height"
            android:layout_height="@dimen/sp_dialog_button_height"
            android:background="?attr/separator_non_opaque" />

        <ge.space.ui.components.buttons.SPButton
            android:id="@+id/btnDialogRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp_dialog_button_height"
            android:layout_weight="1"
            style="@style/SPButton.Dialog.Positive"
            tools:text="Label" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytMultiple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" />

</merge>