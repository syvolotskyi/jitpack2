<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ge.space.ui.components.layout.SPFrameLayout
        android:id="@+id/navigationFrame"
        android:layout_width="@dimen/dimen_p_40"
        android:layout_height="@dimen/dimen_p_40"
        android:layout_margin="@dimen/dimen_p_16"
        app:isCircle="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:style="@style/shadow_empty">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </ge.space.ui.components.layout.SPFrameLayout>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="@dimen/dimen_p_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_p_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/navigationFrame"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>