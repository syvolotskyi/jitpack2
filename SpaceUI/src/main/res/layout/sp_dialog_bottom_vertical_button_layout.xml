<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_dialog_divider_height"
        android:background="?attr/separator_non_opaque_ui" />

    <ge.space.ui.components.buttons.SPButton
        android:id="@+id/btnDialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_dialog_button_height"
        style="@style/SPButton.Dialog.Positive"
        tools:text="Label" />

</merge>