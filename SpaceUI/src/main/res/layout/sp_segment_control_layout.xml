<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_p_40">

        <TextView
            android:id="@+id/chip1"
            style="@style/h700_medium_caps_label_secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="tab1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_p_16"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/chip2"
            app:layout_constraintStart_toEndOf="@id/chip1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chip2"
            style="@style/h700_medium_caps_label_secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="tab2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider2"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_p_16"
            android:background="@color/black"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/chip3"
            app:layout_constraintStart_toEndOf="@id/chip2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chip3"
            style="@style/h700_medium_caps_label_secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="tab3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/divider2"
            app:layout_constraintTop_toTopOf="parent" />

        <ge.space.ui.components.buttons.SPButton
            android:id="@+id/selectedItem"
            style="@style/SPSelectedItem"
            android:layout_width="0dp"
            android:text="tab1"
            android:layout_height="@dimen/dimen_p_36"
            android:layout_marginTop="@dimen/dimen_p_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/chip1"
            app:layout_constraintStart_toStartOf="@id/chip1"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>