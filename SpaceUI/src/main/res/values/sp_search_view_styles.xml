<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SPSearchViewBase">
        <item name="icon" >@drawable/ic_search_24_regular</item>
        <item name="shadowStyle">@style/shadow_empty</item>
    </style>

    <style name="SPSearchViewDefault" parent="SPSearchViewBase">
        <item name="showCancelButton">true</item>
        <item name="showClearButton">true</item>

        <item name="showSettingButton">false</item>
    </style>

    <style name="SPSearchViewGiphy" parent="SPSearchViewBase">
        <item name="showCancelButton">false</item>
        <item name="showClearButton">false</item>
        <item name="icon" >@drawable/ic_search_24_regular</item>
        <item name="showSettingButton">false</item>
    </style>

    <style name="SPSearchViewElevated" parent="SPSearchViewBase">
        <item name="showCancelButton">false</item>
        <item name="showClearButton">true</item>
        <item name="showSettingButton">false</item>
        <item name="shadowStyle">@style/shadow_300_primary</item>
    </style>

    <style name="SPSearchViewFilter" parent="SPSearchViewBase">
        <item name="showCancelButton">false</item>
        <item name="showClearButton">true</item>
        <item name="showSettingButton">true</item>
    </style>

</resources>