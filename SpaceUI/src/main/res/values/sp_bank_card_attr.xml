<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="brandLogoHeight" format="dimension|reference"/>

    <attr name="cardSize" format="enum">
        <enum name="big" value="0" />
        <enum name="small" value="1" />
    </attr>

    <attr name="chipIconAppearance" format="enum">
        <enum name="accent" value="0" />
        <enum name="dark" value="1" />
    </attr>

    <attr name="chipIcon" format="reference" />

    <declare-styleable name="SPBankCardView">
        <attr name="cardStatusTextAppearance" format="reference" />
        <attr name="cardAmountTextAppearance" format="reference" />
        <attr name="cardBankNameTextAppearance" format="reference" />
        <attr name="cardTypeTextAppearance" format="reference" />
        <attr name="cardCreditTitleTextAppearance" format="reference" />
        <attr name="cardBalanceTextAppearance" format="reference" />
        <attr name="cardAccountNumberTextAppearance" format="reference" />
    </declare-styleable>


    <declare-styleable name="SPBaseChip">
        <attr name="chipWidth" />
        <attr name="chipHeight" />
        <attr name="chipStyleRes"/>
        <attr name="hasBorder"/>
    </declare-styleable>

    <declare-styleable name="SPPrimaryChip">
        <attr name="chipIcon" />
    </declare-styleable>

    <declare-styleable name="SPEmptyChip">
        <attr name="emptyChipAppearance" format="enum">
            <enum name="white" value="0" />
            <enum name="dark" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SPDigitalChip">
        <attr name="brandLogoHeight" />
        <attr name="paymentSystemHeight" format="dimension|reference"/>
        <attr name="paymentLogoMargin" format="dimension|reference"/>
        <attr name="chipHeight" />
    </declare-styleable>

    <declare-styleable name="SPSecondaryChip">
        <attr name="placeholder_size" />
    </declare-styleable>

    <declare-styleable name="SPChipIcon">
        <attr name="chipIcon" />
        <attr name="chipIconAppearance" />
    </declare-styleable>

    <declare-styleable name="SPNewCreditCard">
        <attr name="creditCardStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="sp_credit_card">
        <attr name="cardSize" />
    </declare-styleable>

    <declare-styleable name="sp_selectable_chip_item">
        <attr name="selectableChipItemTitleStyle" format="reference" />
        <attr name="selectableChipItemCurrencyStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="sp_selectable_chip_item_currency">
        <attr name="android:background" />
    </declare-styleable>
</resources>