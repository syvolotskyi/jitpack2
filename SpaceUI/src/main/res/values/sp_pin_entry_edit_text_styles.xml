<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SPEditText.Masked" parent="SPTextField.Base">
        <item name="android:textAppearance">@style/h600_bold_text_field_phone</item>
        <item name="android:hint">XXXXXXXXX</item>
    </style>

    <style name="SPPinEntryEditText">
        <item name="android:digits">1234567890</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:inputType">number</item>
        <item name="android:textAppearance">@style/h400_bold_caps_primary</item>
    </style>

    <style name="SPOtpEntryStyle" parent="SPBaseView">
        <item name="backgroundColor">@android:color/white</item>
        <item name="roundedCorners">@dimen/dimen_p_12</item>
    </style>

    <style name="SPPasswordView" parent="SPPinEntryEditText">
        <item name="disableCopyPaste">true</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="labelTextAppearance">@style/h700_medium_caps_label_secondary</item>
        <item name="descriptionTextAppearance">@style/h700_bold_caps_brand_primary</item>
    </style>

    <style name="SPPinEntryOTPCode" parent="SPPinEntryEditText">
        <item name="android:textColor">?attr/brand_primary</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="labelTextAppearance">@style/h700_medium_caps_label_secondary</item>
        <item name="descriptionTextAppearance">@style/h700_bold_caps_brand_primary</item>
    </style>

    <style name="SPPinEntryOTPCode.WithBackground" parent="SPPinEntryOTPCode">
        <item name="backgroundColor">?attr/background_secondary</item>
        <item name="background">?attr/background_secondary</item>
        <item name="labelTextAppearance">@style/h700_medium_caps_label_secondary</item>
        <item name="roundedCorners">@dimen/dimen_p_12</item>
    </style>

</resources>